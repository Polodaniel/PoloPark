@inherits MenuLateralBase

<AuthorizeView>
    <Authorized>

        @{
            var ClaimPrincipal = context.User.Identities.FirstOrDefault();

            if (!Equals(ClaimPrincipal, null))
            {
                var NomeClaim = ClaimPrincipal.Claims.Where(x => x.Type == "Nome").FirstOrDefault();
                NomeUsuario = NomeClaim.Value.ToString();

                var TipoContaClaim = ClaimPrincipal.Claims.Where(x => x.Type == "TipoConta").FirstOrDefault();
                Conta = (TipoConta)(Convert.ToInt32(TipoContaClaim.Value));
            }
        }

        <MudPaper Width="100%" Class="d-inline-flex py-3" Square=true Elevation=0 Style="background-color: transparent;">
            <MudGrid Spacing=0>
                <MudItem xs=12 sm=12 md=12 lg=12 xl=12 xxl=12 Class="mb-2">
                    <UsuarioMenu NomeUsuario=@NomeUsuario 
                                 Conta=@Conta/>
                </MudItem>
                <MudItem xs=12 sm=12 md=12 lg=12 xl=12 xxl=12>
                    <MudNavMenu Class="mud-width-full">
                        @*<MudNavLink Href="/RecursosPremium" Icon=@Icons.Rounded.WorkspacePremium IconColor=Color.Warning>Recursos Premium</MudNavLink>*@
                        <MudNavLink Href="/home" Icon=@Icons.Filled.Dashboard>Dashboard</MudNavLink>

                        <EstacionamentoMenu />
                        <CadastroMenu />
                        <FinanceiroMenu />

                    </MudNavMenu>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </Authorized>
</AuthorizeView>